# Cloudflare settings
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Comma-separated DNS record names (FQDNs)
DNS_RECORD_NAMES=api.example.com,www.example.com

# Server IPs
SERVER1_IP=1.2.3.4
SERVER2_IP=5.6.7.8

# Application port and DNS TTL
PORT=5000
TTL=60

# Log and state file paths
LOG_FILE=/opt/failover/failover.log
STATE_FILE=/opt/failover/failover-state.json

# Flask secret key (for sessions)
SECRET_KEY=change_me_to_random_string

# Admin UI credentials (leave blank to disable auth)
ADMIN_USER=admin
ADMIN_PASS=your_password

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
